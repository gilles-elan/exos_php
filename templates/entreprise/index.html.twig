{% extends 'base.html.twig' %}

{% block title %}Liste des entreprises!{% endblock %}

{% block contenu %}

    <table>
        <thead>
            <tr>
                <th>RAISON SOCIALE</th>
                <th>SIRET</th>
                <th>ADRESSE</th>
                <th>CP</th>
                <th>VILLE</th>
            </tr>
        </thead>
        <tbody>
            {% for entreprise in entreprises %}
                <tr>
                    <td><a href="{{ path('entreprise_show', {'id':entreprise.id}) }}" title="{{ entreprise.raisonSociale }}">{{ entreprise.raisonSociale }}</a></td>
                    <td>{{ entreprise.siret }}</td>
                    <td>{{ entreprise.adresse }}</td>
                    <td>{{ entreprise.cp }}</td>
                    <td>{{ entreprise.ville }}</td>
                    <td><a href="{{ path('entreprise_edit', {'id': entreprise.id}) }}" title="" class="btn btn-primary">Modifier</a></td>
                    <td><a href="{{ path('entreprise_remove', {'id': entreprise.id}) }}" title="" class="btn btn-danger">Supprimer</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('entreprise_add') }}" title="ajouter" class="btn btn-primary">Ajouter une entreprise</a>
